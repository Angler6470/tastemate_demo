# Backend environment variables example

PORT=5000                 # Port for backend server (change if 5000 is in use)
MONGO_URI=mongodb://localhost:27017/tastemate  # MongoDB connection string
OPENAI_API_KEY=your-openai-api-key-here       # Your OpenAI API key (required for chatbot)
JWT_SECRET=your-jwt-secret-here               # Secret for signing/verifying JWT tokens (admin auth)
ADMIN_USER=admin                              # Admin login username
ADMIN_PASS=password                           # Admin login password
